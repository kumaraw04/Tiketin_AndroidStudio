<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5AC15D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#FFFFFF">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_person"
                    android:tint="#5AC15D"
                    android:alpha="0.8" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify Your Account"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:fontFamily="sans-serif-medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complete your profile to continue"
                android:textColor="#E8E8E8"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!-- Main Form Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp">

                <!-- Full Name -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name: No Name"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#2C2C2C"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- User ID -->
                <TextView
                    android:id="@+id/tvUserId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="User ID: No ID"
                    android:textSize="16sp"
                    android:textColor="#6C63FF"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- Email -->
                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email: example@email.com"
                    android:textSize="16sp"
                    android:textColor="#6C63FF"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <!-- Email Verified Status -->
                <TextView
                    android:id="@+id/tvEmailStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email not verified"
                    android:textSize="14sp"
                    android:textColor="#FF6B6B"
                    android:gravity="center" />

                <!-- Send Verification Email Button -->
                <Button
                    android:id="@+id/btnEmailVerify"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Send Verification Email"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:background="@drawable/bg_button_purple"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnSignOut"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Sign Out"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_red"
                android:layout_marginBottom="12dp"
                android:fontFamily="sans-serif-medium" />

            <Button
                android:id="@+id/btnskip"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Skip for Now"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold"
                android:background="@drawable/bg_button_outline"
                android:fontFamily="sans-serif-medium" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Secure • Private • Trusted"
            android:textColor="#E8E8E8"
            android:textSize="12sp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:alpha="0.7" />
    </LinearLayout>
</ScrollView>
